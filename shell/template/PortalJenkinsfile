pipeline {
    agent any
    environment {
        HOME = "${env.WORKSPACE}"
        env_shell="play"
        project_param='--param param_project_name=erp-portal \
                               param_api_image=erp-portal:play \
                               param_api_module_name=portal \
                               param_api_source_share_dir=erp-portal/data \
                               param_api_dest_share_dir=data'
    }
    stages {
        stage('init') {
            steps {
                sh 'pip3 install -r script/requirements.txt && \
                    python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --init \
                    --log-file init.log \
                    ${project_param} \
                    --cmd \'from script.domain.source import base as base_source;\''
            }
        }
        stage('build_api') {
            steps {
                sh 'python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file build_api.log \
                    --cmd \'from script.domain.source import base as base_source,java as java_source;java_source.build_api();base_source.build_template_dict();\''
            }
        }
        stage('deploy') {
            steps {
                sh 'python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file deploy.log \
                    --cmd \'from script.domain.source import base as base_source,java as java_source;base_source.down_container();base_source.start_api_compose()\'\
                    && sh ___output/tmp/nginx.sh'
            }
        }
    }
}
