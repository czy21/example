pipeline {
    agent any
    environment {
        HOME = "${env.WORKSPACE}"
        env_shell="play"
        project_param='--param param_api_image=erp:play'
    }
    stages {
        stage('init') {
            steps {
                sh 'pip3 install -r script/requirements.txt && \
                    python3 shell/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file ensure_network.log \
                    --cmd "
                    from script.domain.source
                    import java as java_source
                    java_source.ensure_network()
                    "'
            }
        }
    }
}
