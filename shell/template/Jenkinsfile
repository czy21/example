pipeline {
    agent any
    stages {
        stage('init') {
            steps {
                sh 'pip3 install -r script/requirements.txt'
            }
        }
        stage('build_deploy') {
            environment {
                HOME = "${env.WORKSPACE}"
            }
            steps {
                sh 'sh shell/local/publish_all.sh --param param_api_image_tag=play'
            }
        }
    }
}
