pipeline {
    agent any
    environment {
        HOME = "${env.WORKSPACE}"
        image_tag="play"
        env_shell="play"
    }
    stages {
        stage('init') {
            steps {
                sh 'pip3 install -r script/requirements.txt && rm -rf ___output/'
            }
        }
        stage('build') {
            environment {
                project_param='--param param_api_image_tag="${image_tag}"'
            }
            failFast true
            parallel {
                stage('db') {
                    steps {
                        sh 'sh shell/"${env_shell}"/rebuild_rdb.sh --skip-rm-output'
                    }
                }
                stage('api') {
                    steps {
                        sh 'sh shell/"${env_shell}"/build_api_compose.sh ${project_param} --skip-rm-output'
                    }
                }
                stage('web') {
                    steps {
                        sh 'echo "build_web"'
                    }
                }
            }
        }
        stage('deploy'){
            steps{
                sh 'sh shell/"${env_shell}"/start_api_compose.sh ${project_param} --skip-rm-output'
            }
        }
    }
}
