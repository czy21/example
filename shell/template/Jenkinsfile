pipeline {
    agent any
    environment {
        HOME = "${env.WORKSPACE}"
        env_shell="play"
        project_param='--param param_api_image=erp:play'
    }
    stages {
        stage('init') {
            steps {
                sh 'pip3 install -r script/requirements.txt && \
                    python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --init \
                    --log-file init.log \
                    ${project_param} \
                    --cmd \'from script.domain.source import base as base_source;\''
            }
        }
        stage('build_api') {
            steps {
                sh 'python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file build_api.log \
                    --cmd \'from script.domain.source import java as java_source;java_source.build_api();\''
            }
        }
        stage('build_web') {
            steps {
                sh 'python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file build_web.log \
                    --cmd \'from script.domain.source import base as base_source,web as web_source;web_source.build_web();web_source.build_cp_shell();web_source.build_nginx();base_source.build_template_dict();\''
            }
        }
        stage('deploy') {
            steps {
                sh 'python3 script/run.py \
                    --env shell/${env_shell}/_env.py \
                    --log-file deploy.log \
                    --cmd \'from script.domain.source import base as base_source,java as java_source;base_source.down_container();base_source.start_api_compose()\'\
                    && sh ___output/tmp/nginx.sh'
            }
        }
    }
}
