<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.dao.UserDao">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.team.entity.po.User">
        <id column="UserId" property="UserId" />
        <result column="AddedTime" property="AddedTime" />
        <result column="ModifiedTime" property="ModifiedTime" />
        <result column="AddedUser" property="AddedUser" />
        <result column="ModifiedUser" property="ModifiedUser" />
        <result column="LoginName" property="LoginName" />
        <result column="Password" property="Password" />
        <result column="UserName" property="UserName" />
        <result column="Email" property="Email" />
        <result column="Phone" property="Phone" />
        <result column="IsHeader" property="IsHeader" />
        <result column="DepartmentId" property="DepartmentId" />
        <result column="Enabled" property="Enabled" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        AddedTime,
        ModifiedTime,
        AddedUser,
        ModifiedUser,
        UserId
        LoginName
        Password
        UserName
        Email
        Phone
        IsHeader
        DepartmentId
        Enabled
    </sql>

    <select id="getRolesByUserName" resultType="com.team.entity.po.Role">
        select r.* from sys_user u
        inner join sys_user_role ur on ur.UserId = u.UserId
        inner join sys_role  r on ur.RoleId = r.RoleId
        where u.LoginName=#{loginName}
    </select>


</mapper>
