<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.repository.mybatis.system.MenuRepository">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.team.entity.mybatis.system.Menu">
        <id column="menu_id" property="menuId" />
        <result column="added_time" property="addedTime" />
        <result column="modified_time" property="modifiedTime" />
        <result column="added_user" property="addedUser" />
        <result column="modified_user" property="modifiedUser" />
        <result column="parent_id" property="parentId" />
        <result column="menu_name" property="menuName" />
        <result column="icon" property="icon" />
        <result column="sort" property="sort" />
        <result column="url" property="url" />
        <result column="is_menu" property="isMenu" />
        <result column="remark" property="remark" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        added_time,
        modified_time,
        added_user,
        modified_user,
        menu_id
        parent_id
        menu_name
        icon
        sort
        url
        is_menu
        remark
    </sql>

    <!--根据用户id查询该用户所有菜单-->
    <select id="getMenusByUserId" resultType="com.team.entity.mybatis.system.Menu">
        select distinct
        m.*
        from sys_menu m,
        sys_role_menu rm,
        sys_user_role ur
        where
        m.menu_id=rm.menu_id
        and ur.role_id=rm.role_id
        and ur.user_id=#{userId}
    </select>
    <!--根据角色id查询该角色所有菜单或权限-->
    <select id="getMenusByRoleId" resultType="com.team.entity.mybatis.system.Menu">
        select distinct
        m.*
        from sys_menu m,
        sys_role_menu rm
        where
        m.menu_id=rm.menu_id
        and rm.role_id=#{roleId}
    </select>

</mapper>
