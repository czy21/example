<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.repository.mybatis.system.RoleMenuRepository">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.team.entity.mybatis.system.RoleMenu">
        <id column="role_menu_id" property="roleMenuId" />
        <result column="added_time" property="addedTime" />
        <result column="modified_time" property="modifiedTime" />
        <result column="added_user" property="addedUser" />
        <result column="modified_user" property="modifiedUser" />
        <result column="role_id" property="roleId" />
        <result column="menu_id" property="menuId" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        added_time,
        modified_time,
        added_user,
        modified_user,
        role_menu_id
        role_id
        menu_id
    </sql>

    <!--根据用户id查询该用户所有菜单或权限-->
    <select id="getMenusByUserId" resultType="com.team.entity.mybatis.system.Menu">
        select distinct
        m.*
        from sys_menu m,
        sys_role_menu rm,
        sys_user_role ur
        where
        m.menu_id=rm.menu_id
        and ur.role_id=rm.role_id
        and ur.user_id=#{userId}
    </select>
    <!--根据角色id查询该角色所有菜单或权限-->
    <select id="getMenusByRoleId" resultType="com.team.entity.mybatis.system.Menu">
        select distinct
        m.*
        from sys_menu m,
        sys_role_menu rm
        where
        m.menu_id=rm.menu_id
        and rm.role_id=#{roleId}
    </select>

</mapper>
